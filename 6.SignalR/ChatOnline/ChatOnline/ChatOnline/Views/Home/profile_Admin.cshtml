
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    
    <link rel="stylesheet" href="~/Assets/css/AdminStyle.css">
 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <title>profile_Admin</title>
</head>
<body>
    <input type="hidden" id="MyToken" value=@TempData["TokenID"] />
    <div class="AdminChatWindow" id="ChatWindow">
        <div class="container">
            <button type="button" class="close" onclick="closeChatWindow()" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="messaging">
                <div class="inbox_msg">
                    <div class="inbox_people">
                        <div class="headind_srch">
                            <div class="recent_heading">
                                <h4>لیست بیماران</h4>
                            </div>
                        </div>

                        <div class="inbox_chat">
                            
                            
                            @{ foreach (var item in Model)
                                {
                                    <div class="chat_list active_chat" onclick="ondf(this.id)" id=@item.TokenID>

                                        <div class="chat_people">
                                            <div class="chat_img"> <img src="~/Assets/img/client.png" alt="client"> </div>

                                            <div class="chat_ib" style="cursor: pointer;">

                                                @{ 
                                                    var nameUser = "N" + @item.TokenID;
                                                }  
                                                <h5>@item.username_ </h5>
                                                <input type="hidden" id=@nameUser value=@item.username_ />


                                            </div>
                                        </div>
                                    </div>



                                }
                            }

                        </div>
                    </div>
                    <div class="mesgs" id="name_">
                        <div class="msg_history" id="msg_">




                        </div>
                        <div class="type_msg">
                            <div class="input_msg_write">
                                <input type="text" class="write_msg" id="txtMessage" placeholder="پیام را در این جا تایپ کنید" />
                                <button class="msg_send_btn" id="btnSendMessage" type="button"></button>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>



    <div class="ChatIcon" id="Chatbtn">
        <img src="~/Assets/img/ChatIcon.png" onclick="openChatWindow()">
    </div>


    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>
    <script src="~/Assets/js/AdminScript.js"></script>

</body>
</html>
